<main>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

        <p id="notice"></p>
        <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>

  <%= form_with model:@book, local:true do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <div><%= f.text_field :title %></div>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <div><%= f.text_area :body %></div>
  </div>
  <div>
     <%= f.submit 'Update Book' %>
    <%#<input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">%>
  </div>
</form>
      <div><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></div>
  </div>
</div>
      </div></main>
<% end %>